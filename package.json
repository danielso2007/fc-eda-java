{
  "name": "fc-eda-java",
  "version": "0.2.0",
  "description": "Projeto para estudo da arquitetura orientada a eventos.",
  "scripts": {
    "prepare": "husky",
    "commit": "cz",
    "release": "standard-version",
    "changelog": "standard-version --dry-run",
    "postrelease": "mvn versions:set -DnewVersion=$(node -p \"require('./package.json').version\") -DgenerateBackupPoms=false && git add pom.xml && git commit --amend --no-edit && git tag -f v$(node -p \"require('./package.json').version\")",
    "release:push": "git push --follow-tags origin developer"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielso2007/fc-eda-java.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/danielso2007/fc-eda-java/issues"
  },
  "homepage": "https://github.com/danielso2007/fc-eda-java#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
